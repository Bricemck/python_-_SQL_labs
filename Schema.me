CREATE TABLE employees (
  id SERIAL PRIMARY KEY,
  first_name TEXT NOT NULL,
  last_name TEXT NOT NULL,
  email TEXT UNIQUE,
  position TEXT,
  salary NUMERIC(10, 2),
  company_id INTEGER REFERENCES companies(id)
);

CREATE TABLE companies (
  id SERIAL PRIMARY KEY,
  name TEXT NOT NULL,
  industry TEXT,
  founded_year INTEGER,
  headquarters TEXT
);